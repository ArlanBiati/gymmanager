{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/cssMembers/members.css">
    <title>Detalhes do Membro - Gyn Manager</title>
{% endblock head %}

{% block content %}

    <div class="card table-container">
        <a href="/members/create">Novo</a>
        <table width="100%">
            {# thead - cabeçalho #}
            <thead>
                {# tr - linha da tabela #}
                <tr>
                    {# th - colunas do cabeçalho #}
                    <th>Membro</th>
                    <th>Email</th>
                    <th>Peso (Kg)</th>
                    <th>Altura (cm)</th>
                    <th>Ação</th>
                </tr>
            </thead>

            {# tbody - corpo da tabela #}
            <tbody>
                {% for member in members %}
                    <tr>
                        {# td - colunas do corpo #}
                        <td>
                            <span style="background-image: url({{ member.avatar_url }})"></span>
                            {{ member.name }}
                        </td>
                        <td>{{ member.email }}</td>
                        <td>{{ member.weigth }}</td>
                        <td>{{ member.height }}</td>
                        <td>
                            <a href="/members/{{ member.id }}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock content %}