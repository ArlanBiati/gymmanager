{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/cssInstructors/instructor.css">
    <title>Detalhes do Instrutor - Gyn Manager</title>
{% endblock head %}

{% block content %}

    <div class="card table-container">
        <a href="/instructors/create">Novo</a>
        <table width="100%">
            {# thead - cabeçalho #}
            <thead>
                {# tr - linha da tabela #}
                <tr>
                    {# th - colunas do cabeçalho #}
                    <th>Instrutor</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>

            {# tbody - corpo da tabela #}
            <tbody>
                {% for instructor in instructors %}
                    <tr>
                        {# td - colunas do corpo #}
                        <td>
                            <span style="background-image: url({{ instructor.avatar_url }})"></span>
                            {{ instructor.name }}
                        </td>
                        <td>{{ instructor.services }}</td>
                        <td>
                            <a href="/instructors/{{ instructor.id }}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock content %}